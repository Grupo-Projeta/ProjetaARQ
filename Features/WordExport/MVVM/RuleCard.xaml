<UserControl x:Class="ProjetaARQ.Features.WordExport.MVVM.RuleCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:dd="urn:gong-wpf-dragdrop"  
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400"
             MinHeight="60"
             MaxHeight="500">


    <Expander Style="{DynamicResource MahApps.Styles.Expander}">

        <Expander.Header>
            <Grid Width="350">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Expander.Header>
        

        <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="3" Background="WhiteSmoke">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="10">
                    <TextBlock Text="Conteúdo da Configuração da Regra..." 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Grid>


                <Thumb Grid.Row="1" 
                       Height="20" 
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Stretch"
                       Cursor="SizeNS"
                       Background="LightGray"
                       Opacity="0.7"
                       DragDelta="Thumb_DragDelta"/>
            </Grid>
        </Border>
    </Expander>

    

</UserControl>