<UserControl x:Class="ProjetaARQ.Features.WordExport.MVVM.Views.RuleCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProjetaARQ.Features.WordExport.MVVM.Views"
             xmlns:dd="urn:gong-wpf-dragdrop"
             xmlns:viewModel="clr-namespace:ProjetaARQ.Features.WordExport.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance viewModel:RuleCardViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="450"
             Height="Auto">

    <UserControl.Resources>
        <ResourceDictionary Source="/ProjetaARQ;component/Core/UI/Styles/CommonStyles.xaml"/>
    </UserControl.Resources>
    
    <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
              Style="{DynamicResource MahApps.Styles.Expander}"
              HorizontalAlignment="Stretch"
              Padding="0" Width="450">
        <Expander.Header>
            <StackPanel>
                <TextBox Text="{Binding RuleName, Mode=TwoWay}"
                         IsUndoEnabled="False"
                         HorizontalAlignment="Left"
                         Margin="10 0 0 0"
                         MinWidth="200" MaxWidth="400"/>
            </StackPanel>
        </Expander.Header>

        <ContentControl>
            
        </ContentControl>
        
        <!--<Grid>
            <Grid.RowDefinitions>
