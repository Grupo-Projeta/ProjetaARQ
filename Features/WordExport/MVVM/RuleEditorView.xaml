<UserControl x:Class="ProjetaARQ.Features.WordExport.MVVM.RuleEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjetaARQ.Features.WordExport.MVVM"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:viewModel="clr-namespace:ProjetaARQ.Features.WordExport.MVVM"
             xmlns:dd="urn:gong-wpf-dragdrop"
             d:DataContext="{d:DesignInstance viewModel:RuleEditorViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="780" d:DesignWidth="740"
             Background="Transparent">

    <UserControl.Resources>
        <ResourceDictionary Source="/ProjetaARQ;component/Core/UI/Styles/CommonStyles.xaml"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal">
            <Button Content="DESFAZER"
                    Command="{Binding UndoCommand}"/>
            
            <Button Content="REFAZER"
                    Command="{Binding RedoCommand}"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding RulesList}"
                          dd:DragDrop.IsDropTarget="True"
                          dd:DragDrop.IsDragSource="True"
                          dd:DragDrop.UseDefaultDragAdorner="True">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:RuleCard Margin="10"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Stretch"
                                    Background="Transparent"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Background="Aquamarine">

            <Button Command="{Binding AddRuleCommand}"
                    Content="+"
                    Style="{StaticResource MahApps.Styles.Button.Chromeless}"
                    VerticalAlignment="Stretch"
                    Width="60"
                    />
            <TextBlock Text="Adicionar Regra" VerticalAlignment="Stretch"/>
        </StackPanel>
        
    </Grid>
</UserControl>
