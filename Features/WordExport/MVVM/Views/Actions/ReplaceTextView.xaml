<UserControl x:Class="ProjetaARQ.Features.WordExport.MVVM.Views.Actions.ReplaceTextView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjetaARQ.Features.WordExport.MVVM.Views.Actions"
             xmlns:viewModel="clr-namespace:ProjetaARQ.Features.WordExport.MVVM.ViewModels"
             xmlns:actionViewModel="clr-namespace:ProjetaARQ.Features.WordExport.MVVM.ViewModels.Actions"
             d:DataContext="{d:DesignInstance actionViewModel:ReplaceTextViewModel}"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="450" 
             d:DesignWidth="800"
             Background="#FFFEFEFE">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ProjetaARQ;component/Features/WordExport/MVVM/Resources/DataTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style TargetType="ComboBox" BasedOn="{StaticResource MahApps.Styles.ComboBox}">
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style TargetType="Label" BasedOn="{StaticResource MahApps.Styles.Label}">
                <Setter Property="FontSize" Value="14"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border>
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border VerticalAlignment="Stretch" Width="1"
                    HorizontalAlignment="Center"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Grid.RowSpan="3"
                    BorderBrush="Black" BorderThickness="2"/>

            <Border Grid.Column="0"
                    Grid.Row="0"
                    Padding="20 10">

                <StackPanel>

                    <Label Content="CONDIÇÃO:"/>
                    <ComboBox Height="Auto"
                              FontSize="14"
                              VerticalContentAlignment="Center"
                              SelectedIndex="0"      
                              ItemsSource="{Binding Source={StaticResource ConditionTypeProvider}}"
                              SelectedItem="{Binding SelectedCondition, Mode=TwoWay}"
                              PreviewMouseWheel="ComboBox_PreviewMouseWheel">

                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

            </Border>

            <Border Grid.Column="1"
                    Grid.Row="0"
                    Padding="20 10">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox Height="Auto"
                              Margin="0 15 0 0"
                              Grid.ColumnSpan="2"
                              mah:CheckBoxHelper.CheckSize="30"
                              mah:VisibilityHelper.IsCollapsed="{Binding IsCheckBoxConditionCollapsed}">
                        
                        <TextBox Text=""
                                 mah:TextBoxHelper.Watermark="Digite a condição para o usuário"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"/>
                    </CheckBox>
                </Grid>
                
            </Border>
            
            
            <Border Grid.ColumnSpan="2"
                    Grid.Row="1"
                    Height="50"
                    Visibility="Collapsed">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Background="White">
                    <TextBlock.Text>
                        ESPAÇO DE LOGICA DE CONDICAO POSSIVEL DE IMPLEMENTAR
                    </TextBlock.Text>
                </TextBlock>
            </Border>

            <Border Grid.Column="0"
                    Grid.Row="2"
                    Padding="20 10"
                    BorderThickness="0 1 0 0"
                    BorderBrush="Black">
                
                <StackPanel>

                    <Border Name="TargetSection"      
                            Margin="0 0 0 10">
                        <StackPanel Orientation="Vertical">
                        
                            <Label Content="TAG DO CONTEÚDO:"/>

                            <TextBox Padding="5 0 0 0"
                                     VerticalContentAlignment="Center"
                                     FontSize="14"
                                     Text="{Binding ContentTag}"
                                     mah:TextBoxHelper.Watermark="Digite o nome da Tag"/>

                            <Separator HorizontalAlignment="Stretch"
                                       Margin="0 20 0 0"
                                       Width="Auto"/>
                        </StackPanel>
                    </Border>

                    <Border Margin="0 0 0 10"
                            Name="EditMode">

                        <StackPanel Orientation="Vertical">

                            <Label Content="MODO:"/>

                            <ComboBox SelectedIndex="0"
                                      Padding="5 0 0 0"
                                      ItemsSource="{Binding Source={StaticResource EditModeTypeProvider}}"
                                      SelectedItem="{Binding SelectedEditMode, Mode=TwoWay}"
                                      mah:ComboBoxHelper.CharacterCasing="Upper"
                                      PreviewMouseWheel="ComboBox_PreviewMouseWheel">
                                
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            
                            <Separator HorizontalAlignment="Stretch"
                                       Margin="0 20 0 0"
                                       Width="Auto"/>
                        </StackPanel>
                    </Border>
                    
                    <Border mah:VisibilityHelper.IsCollapsed="{Binding IsTextToReplaceCollapsed}">
                        <StackPanel Orientation="Vertical">
                            <Label Content="TEXTO A SER SUBSTITUIDO:"/>
                            <mah:ClipBorder BorderBrush="LightGray"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            MinHeight="100">


                                <TextBox BorderThickness="0"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         Width="Auto"
                                         Text="{Binding TextBoxToReplace}"
                                         FontSize="14">
                                    <mah:TextBoxHelper.Watermark>
                                        Digite o texto a ser substituído
                                    </mah:TextBoxHelper.Watermark>
                                </TextBox>

                            </mah:ClipBorder>
                        </StackPanel>
                    </Border>

                    
                </StackPanel>
                

            </Border>

            <Border Grid.Column="1"
                    Grid.Row="2"
                    Padding="20 10"
                    BorderThickness="0 1 0 0"
                    BorderBrush="Black">
                
                <StackPanel>

                    <Border Name="DataSource"      
                            Margin="0 0 0 10">
                        <StackPanel Orientation="Vertical">

                            <Label Content="MODO DE INSERÇÃO:"/>

                            <ComboBox SelectedIndex="0"
                                      Padding="5 0 0 0"          
                                      ItemsSource="{Binding Source={StaticResource DataSourceTypeProvider}}"
                                      SelectedItem="{Binding SelectedDataSource, Mode=TwoWay}"
                                      mah:TextBoxHelper.Watermark="TESTE"
                                      IsEnabled="{Binding IsDataSourceEnabled}">

                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}"
                                                   />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                            
                            <Separator HorizontalAlignment="Stretch"
                                       Margin="0 20 0 0"
                                       Width="Auto"/>
                        </StackPanel>
                    </Border>

                    <Border Name="TextBlockOptions"      
                            Margin="0 0 0 10"
                            mah:VisibilityHelper.IsCollapsed="{Binding IsTextBlockOptionsCollapsed}">
                        <StackPanel Orientation="Vertical">

                            <Label Content="BLOCO DE TEXTO:"/>

                            <ComboBox SelectedIndex="0"
                                      Padding="5 0 0 0">

                                <ComboBoxItem Content="DESCRIÇÃO URBANISMO"/>
                            </ComboBox>
                            
                            <Separator HorizontalAlignment="Stretch"
                                       Margin="0 20 0 0"
                                       Width="Auto"/>
                        </StackPanel>
                    </Border>

                    <Border Name="ParameterName"      
                            Margin="0 0 0 10"
                            mah:VisibilityHelper.IsCollapsed="{Binding IsSetRevitPararameterCollapsed}">
                        <StackPanel Orientation="Vertical">

                            <Label Content="PARÂMETRO:"/>

                            <ComboBox SelectedIndex="0"
                                      Padding="5 0 0 0"
                                      IsEditable="True"
                                      Text="{Binding RevitParameterName, Mode=TwoWay}"
                                      mah:TextBoxHelper.Watermark="Digite o nome do parâmetro"
                                      
                                      PreviewMouseWheel="ComboBox_PreviewMouseWheel"/>

                            <Separator HorizontalAlignment="Stretch"
                                       Margin="0 20 0 0"
                                       Width="Auto"/>
                        </StackPanel>
                    </Border>


                    <Border x:Name="NewTextInputBox"
                            mah:VisibilityHelper.IsCollapsed="{Binding IsNewTextCollapsed}">
                        
                        <StackPanel Orientation="Vertical">
                            <Label Content="TEXTO NOVO:"/>
                            <mah:ClipBorder BorderBrush="LightGray"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            MinHeight="100">


                                <TextBox BorderThickness="0"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         Width="Auto"
                                         Text="{Binding ReplacementTextBox}"
                                         FontSize="14">
                                    
                                    <mah:TextBoxHelper.Watermark>
                                        Digite o novo texto
                                    </mah:TextBoxHelper.Watermark>
                                </TextBox>

                            </mah:ClipBorder>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>

        </Grid>
    </Border>
</UserControl>
