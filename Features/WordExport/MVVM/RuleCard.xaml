<UserControl x:Class="ProjetaARQ.Features.WordExport.MVVM.RuleCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dd="urn:gong-wpf-dragdrop"
             xmlns:viewModel="clr-namespace:ProjetaARQ.Features.WordExport.MVVM"
             d:DataContext="{d:DesignInstance viewModel:RuleCardModel}"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="450"
             Height="Auto">

    <UserControl.Resources>
        <ResourceDictionary Source="/ProjetaARQ;component/Core/UI/Styles/CommonStyles.xaml"/>
    </UserControl.Resources>
    
    <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
              Style="{DynamicResource MahApps.Styles.Expander}"
              HorizontalAlignment="Left"
              Width="450"
              Padding="0">
        <Expander.Header>
            <StackPanel>
                <TextBox Text="{Binding RuleName, Mode=TwoWay}"
                         IsUndoEnabled="False"
                         HorizontalAlignment="Left"
                         Margin="10 0 0 0"
                         MinWidth="200" MaxWidth="400"/>
            </StackPanel>
        </Expander.Header>

        <Border x:Name="ContentBorder"
                dd:DragDrop.DragSourceIgnore="True"
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Background="#FAFAFA">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="20">
                    <TextBlock Text="Controles para configurar a regra..." HorizontalAlignment="Left"/>
                </Grid>

                <Thumb dd:DragDrop.DragSourceIgnore="True"
                       Grid.Row="1" 
                       Height="10" 
                       Cursor="SizeNS"
                       Background="LightGray"
                       Opacity="0.7"
                       DragDelta="Thumb_DragDelta"/>
            </Grid>
        </Border>
    </Expander>
</UserControl>