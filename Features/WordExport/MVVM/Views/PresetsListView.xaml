<UserControl x:Class="ProjetaARQ.Features.WordExport.MVVM.Views.PresetsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjetaARQ.Features.WordExport.MVVM.Views"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:viewModel="clr-namespace:ProjetaARQ.Features.WordExport.MVVM.ViewModels"
             xmlns:converters="clr-namespace:ProjetaARQ.Core.UI.Converters"
             x:Name="PresetListView_UserControl"
             d:DataContext="{d:DesignInstance viewModel:PresetsListViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ProjetaARQ;component/Features/WordExport/MVVM/Resources/DataTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Border Background="Transparent">
        
        <ListView x:Name="PresetsList_ListView"
                  ItemsSource="{Binding PresetsList}"
                  AlternationCount="2"
                  HorizontalAlignment="Stretch">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Focusable" Value="False"/>
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="#FAFAFA"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{Binding Background, RelativeSource= {RelativeSource Mode=Self}}"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView>
                    
                    <GridViewColumn Header="Nome" 
                                    Width="{Binding ActualWidth,
                                            ElementName=PresetsList_ListView,
                                            Converter={StaticResource PercentageConverter},
                                            ConverterParameter=60}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,15">

                                    <Image Source="/ProjetaARQ;component/Common/Images/word-doc.png" 
                                           Height="24" Width="24"
                                           Margin="0 0 5 0"/>

                                    
                                    <Image Source="{Binding word-doc, 
                                                    Converter={StaticResource BitmapImageConverter}}"
                                           Height="24" Width="24"
                                           Margin="0 0 5 0"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>

                                    <TextBlock Text="{Binding PresetName}" 
                                               VerticalAlignment="Center"
                                               TextWrapping="NoWrap"
                                               Padding="0 0 50 0"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Data de Modificação" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <!--<TextBlock Text="{Binding LastModified, StringFormat='dd/MM/yyyy'}" VerticalAlignment="Center"/>-->
                                <TextBlock Text="Agora"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Opções" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel x:Name="ListItemOption"
                                            Orientation="Horizontal"
                                            DockPanel.Dock="Right" >
                                    <Button Grid.Row="1"
                                            Command="{Binding DataContext.EditPresetCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding .}"
                                            Style="{StaticResource MahApps.Styles.Button.Chromeless}"
                                            Cursor="Hand"
                                            Foreground="Black" FontSize="20">

                                        <iconPacks:PackIconMaterialDesign Kind="ModeEditOutlineOutline"/>
                                    </Button>

                                    <Button Width="50"
                                            Style="{DynamicResource MahApps.Styles.Button.Chromeless}">
                                        <iconPacks:PackIconMaterialDesign Kind="DeleteOutlineOutline"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
    </Border>
</UserControl>
