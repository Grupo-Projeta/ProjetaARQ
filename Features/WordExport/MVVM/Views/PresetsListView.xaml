<UserControl x:Class="ProjetaARQ.Features.WordExport.MVVM.Views.PresetsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjetaARQ.Features.WordExport.MVVM.Views"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:viewModel="clr-namespace:ProjetaARQ.Features.WordExport.MVVM.ViewModels"
             xmlns:converters="clr-namespace:ProjetaARQ.Core.UI.Converters"
             x:Name="PresetListView_UserControl"
             d:DataContext="{d:DesignInstance viewModel:PresetsListViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ProjetaARQ;component/Features/WordExport/MVVM/Resources/DataTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="Transparent"
            Padding="32 16 0 32">

        <ListView x:Name="PresetsList_ListView"
                  ItemsSource="{Binding PresetsList}"
                  AlternationCount="2"
                  HorizontalAlignment="Stretch"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ItemContainerStyle="{StaticResource PresetsListViewItemStyle}"
                  Padding="0 0 32 0">

            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource PresetListViewHeaderStyle}">

                    <GridViewColumn Header="Nome" 
                                    Width="{Binding ActualWidth,
                                            ElementName=PresetsList_ListView,
                                            Converter={StaticResource PercentageConverter},
                                            ConverterParameter=60}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,15">


                                    <Image Source="{Binding Converter={StaticResource BitmapImageConverter},
                                                    ConverterParameter='word-doc.png'}"
                                           Height="24" Width="24"
                                           Margin="0 0 5 0"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>

                                    <TextBlock Text="{Binding PresetName}" 
                                               VerticalAlignment="Center"
                                               Padding="0 0 50 0"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Data de Modificação" 
                                    Width="{Binding ActualWidth,
                                            ElementName=PresetsList_ListView,
                                            Converter={StaticResource PercentageConverter},
                                            ConverterParameter=20}">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <!--<TextBlock Text="{Binding LastModified, StringFormat='dd/MM/yyyy'}" VerticalAlignment="Center"/>-->
                                <TextBlock Text="22/05/2001"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Opções"
                                    Width="{Binding ActualWidth,
                                            ElementName=PresetsList_ListView,
                                            Converter={StaticResource PercentageConverter},
                                            ConverterParameter=20}">

                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel x:Name="ListItemOption"
                                            Orientation="Horizontal"
                                            DockPanel.Dock="Right">

                                    <Button Command="{Binding DataContext.EditPresetCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding .}"
                                            ToolTip="Editar Preset"
                                            Style="{StaticResource MahApps.Styles.Button.Chromeless}"
                                            Cursor="Hand"
                                            Margin="0 0 16 0"
                                            Foreground="Black" FontSize="20">

                                        <iconPacks:PackIconMaterialDesign Kind="ModeEditOutlineOutline"/>
                                    </Button>
                                    
                                    <Button Style="{DynamicResource MahApps.Styles.Button.Chromeless}"
                                            ToolTip="Duplicar Preset"
                                            Cursor="Hand"
                                            Margin="0 0 16 0">
                                        <iconPacks:PackIconMaterial Kind="ContentCopy"/>
                                    </Button>

                                    <Button Style="{DynamicResource MahApps.Styles.Button.Chromeless}"
                                            ToolTip="Renomear Preset"
                                            Cursor="Hand"
                                            Margin="0 0 16 0">
                                        <iconPacks:PackIconMaterial Kind="FormTextBox"/>
                                    </Button>

                                    <Button Style="{DynamicResource MahApps.Styles.Button.Chromeless}"
                                            ToolTip="Deletar Preset"
                                            Cursor="Hand"
                                            Margin="0 0 0 0">
                                        <iconPacks:PackIconMaterialDesign Kind="DeleteOutlineOutline"/>
                                    </Button>
                                    
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Border>
</UserControl>
