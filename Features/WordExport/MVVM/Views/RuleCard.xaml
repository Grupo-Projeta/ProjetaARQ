<UserControl x:Class="ProjetaARQ.Features.WordExport.MVVM.Views.RuleCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ProjetaARQ.Features.WordExport.MVVM.Views"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:dd="urn:gong-wpf-dragdrop"
             xmlns:viewModel="clr-namespace:ProjetaARQ.Features.WordExport.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance viewModel:RuleCardViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="450"
             Height="Auto">

    <UserControl.Resources>
        <ResourceDictionary Source="/ProjetaARQ;component/Features/WordExport/MVVM/Resources/DataTemplates.xaml"/>
    </UserControl.Resources>

    <Expander IsExpanded="{Binding IsExpanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
              Style="{DynamicResource MahApps.Styles.Expander}"
              HorizontalAlignment="Stretch"
              Padding="0"
              BorderThickness="0 0 0 1"
              BorderBrush="Black"
              mah:HeaderedControlHelper.HeaderBackground="{DynamicResource MahApps.Brushes.Accent}"
              >
        
        <Expander.Header>

            <Border >
                <StackPanel Orientation="Horizontal" 
                            Height="50">
                    
                    <TextBox Text="{Binding RuleName, Mode=TwoWay}"
                             IsUndoEnabled="False"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             Height="26"
                             Margin="10 0 0 0"
                             MinWidth="200" MaxWidth="400"/>
                
                    <ComboBox ItemsSource="{Binding ActionOptions}"
                              DisplayMemberPath="Value"
                              SelectedValuePath="Key"
                              SelectedValue="{Binding SelectedAction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              HorizontalAlignment="Left"
                              Height="26"
                              BorderBrush="Black"
                              Margin="10 0 0 0"
                              MinWidth="200" MaxWidth="400"/>
                
                    
                </StackPanel>
            </Border>
            
        </Expander.Header>

        <ContentControl Content="{Binding CurrentActionViewModel}"/>

        <!--<Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="20">
                <TextBlock Text="Controles para configurar a regra..." HorizontalAlignment="Left"/>
            </Grid>

            <Thumb dd:DragDrop.DragSourceIgnore="True"
                   Grid.Row="1" 
                   Height="10" 
                   Cursor="SizeNS"
                   Background="LightGray"
                   Opacity="0.7"
                   DragDelta="Thumb_DragDelta"/>
        </Grid>-->
    </Expander>
</UserControl>