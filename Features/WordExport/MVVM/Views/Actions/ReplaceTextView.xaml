<UserControl x:Class="ProjetaARQ.Features.WordExport.MVVM.Views.Actions.ReplaceTextView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjetaARQ.Features.WordExport.MVVM.Views.Actions"
             xmlns:viewModel="clr-namespace:ProjetaARQ.Features.WordExport.MVVM.ViewModels"
             d:DataContext="{d:DesignInstance viewModel:RuleEditorViewModel}"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ProjetaARQ;component/Features/WordExport/MVVM/Resources/DataTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style TargetType="ComboBox" BasedOn="{StaticResource MahApps.Styles.ComboBox}">
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style TargetType="Label" BasedOn="{StaticResource MahApps.Styles.Label}">
                <Setter Property="FontSize" Value="14"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border>
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Column="0"
                    Grid.Row="0"
                    Padding="20 10">

                <ComboBox Height="30"
                          FontSize="14"
                          VerticalContentAlignment="Center"
                          SelectedIndex="0">

                    <ComboBoxItem Content="CONDIÇÃO: SIM OU NAO DO USUARIO"/>
                </ComboBox>
            </Border>

            <Border Grid.Column="1"
                    Grid.Row="0"
                    Padding="20 10">
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <CheckBox Height="Auto"
                              Grid.ColumnSpan="2"
                              mah:CheckBoxHelper.CheckSize="30">
                        
                        <TextBox Text="URBANISMO"
                                 FontSize="14"
                                 VerticalContentAlignment="Center"/>
                    </CheckBox>
                </Grid>
                
            </Border>
            
            
            <Border Grid.ColumnSpan="2"
                    Grid.Row="1"
                    Height="50">
                <TextBlock HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"
                           Background="White">
                    <TextBlock.Text>
                        ESPAÇO DE LOGICA DE CONDICAO POSSIVEL DE IMPLEMENTAR
                    </TextBlock.Text>
                </TextBlock>
            </Border>

            <Border Grid.Column="0"
                    Grid.Row="2"
                    Padding="20 10">
                
                <StackPanel>

                    <Border Name="TargetSection"      
                            Margin="0 0 0 20">
                        <StackPanel Orientation="Horizontal">
                        
                            <Label Content="NOME DA SEÇÃO:"/>
                        
                            <ComboBox SelectedIndex="0"
                                      Padding="5 0 0 0">

                                <ComboBoxItem Content="NOME EXEMPLO "/>
                            </ComboBox>
                        
                        </StackPanel>
                    </Border>

                    <Border Margin="0 0 0 20"
                            Name="EditMode">

                        <StackPanel Orientation="Horizontal">

                            <Label Content="MODO:"/>

                            <ComboBox SelectedIndex="0"
                                      Padding="5 0 0 0">

                                <ComboBoxItem Content="SUBSTITUIR PARTE DO TEXTO"/>
                            </ComboBox>

                        </StackPanel>
                    </Border>
                    
                    <Border>
                        <StackPanel>
                            <Label Content="TEXTO A SER SUBSTITUIDO:"/>
                            <mah:ClipBorder BorderBrush="LightGray"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            MinHeight="100">


                                <TextBox BorderThickness="0">
                                    <TextBox.Text>
                                        CASO SEJA ESCOLHIDO A OPCAO SUBSTITUIR UMA PARTE
                                    </TextBox.Text>
                                </TextBox>

                            </mah:ClipBorder>
                        </StackPanel>
                    </Border>

                    
                </StackPanel>
                

            </Border>

            <Border Grid.Column="1"
                    Grid.Row="2"
                    Padding="20 10">
                
                <StackPanel>

                    <Border Name="InsertMode"      
                            Margin="0 0 0 20">
                        <StackPanel Orientation="Horizontal">

                            <Label Content="MODO DE INSERÇÃO:"/>

                            <ComboBox SelectedIndex="0"
                                      Padding="5 0 0 0">

                                <ComboBoxItem Content="PARÂMETRO REVIT"/>
                            </ComboBox>

                        </StackPanel>
                    </Border>

                    <Border Name="TextBlockOptions"      
                            Margin="0 0 0 20">
                        <StackPanel Orientation="Horizontal">

                            <Label Content="BLOCO DE TEXTO:"/>

                            <ComboBox SelectedIndex="0"
                                      Padding="5 0 0 0">

                                <ComboBoxItem Content="DESCRIÇÃO URBANISMO"/>
                            </ComboBox>

                        </StackPanel>
                    </Border>

                    <Border Name="ParameterName"      
                            Margin="0 0 0 20">
                        <StackPanel Orientation="Horizontal">

                            <Label Content="PARÂMETRO:"/>

                            <ComboBox SelectedIndex="0"
                                      Padding="5 0 0 0">

                                <ComboBoxItem Content="PARAMETRO NOME"/>
                            </ComboBox>

                        </StackPanel>
                    </Border>


                    <Border>
                        <StackPanel>
                            <Label Content="TEXTO A SER SUBSTITUIDO:"/>
                            <mah:ClipBorder BorderBrush="LightGray"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            MinHeight="100">


                                <TextBox BorderThickness="0">
                                    <TextBox.Text>
                                        CASO SEJA NECESSARIO ESCREVER A MODIFICACAO
                                    </TextBox.Text>
                                </TextBox>

                            </mah:ClipBorder>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>

        </Grid>
    </Border>
</UserControl>
